<?xml version="1.0" encoding="utf-8"?>
<!--控件/布局使用的Style-->
<resources>

    <style name="AppToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_50dp</item>
        <item name="android:background">@color/mainColor</item>
    </style>

    <!--主页底栏图片Style-->
    <style name="mainBottomBarImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 主页面Tab页外层布局样式 -->
    <style name="tabLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--登陆按钮style-->
    <style name="loginButtonStyle">
        <item name="android:background">@color/btn_1_bg_color</item>
        <item name="android:text">@string/Login</item>
        <item name="android:textColor">@color/text_color1</item>
    </style>

    <!--注册按钮style-->
    <style name="registerButtonStyle">
        <item name="android:background">@color/btn_2_bg_color</item>
        <item name="android:text">@string/Register</item>
        <item name="android:textColor">@color/text_color1</item>
    </style>

    <!--注册页面-编辑框-->
    <style name="registerEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--返回键的属性设置-->
    <style name="backKeyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!--设置相关页面-文字-->
    <style name="settingTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableEnd">@drawable/icon_right_arrow</item>
        <item name="android:drawableRight">@drawable/icon_right_arrow</item>
        <item name="android:padding">@dimen/layout_15dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!--设置相关页面-分割线-->
    <style name="settingDividingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_1dp</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:layout_marginBottom">0.5dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_3dp</item>
        <item name="android:layout_marginRight">@dimen/layout_3dp</item>
    </style>

    <!--联系我们页面的Item-->
    <style name="contactUsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--联系我们页面的左侧文字-->
    <style name="contactUsLeftTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:padding">@dimen/layout_15dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!--联系我们页面的右侧文字-->
    <style name="contactUsRightTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:padding">@dimen/layout_15dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>