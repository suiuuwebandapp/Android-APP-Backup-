<resources>

    <!-- Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.-->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--Theme.AppCompat.Light.NoActionBar-->
    <!--android:Theme.Light.NoTitleBar-->
    <style name="FullBleedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppNewBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppReleaseTheme" parent="AppNewBaseTheme">
        <item name="colorPrimary">@color/DefaultGray2</item>
    </style>

    <style name="AppAccountTheme" parent="AppNewBaseTheme">
        <item name="colorPrimary">@color/tr_black</item>
    </style>

    <style name="AppMainTheme" parent="AppNewBaseTheme">
        <item name="colorPrimaryDark">@color/topColor</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="AppNewBaseTheme2" parent="Theme.AppCompat.NoActionBar" />

    <style name="AppMainTheme2" parent="AppNewBaseTheme2">
        <item name="colorPrimaryDark">@color/topColor</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="BaseLayoutTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBarLayoutTheme" parent="BaseLayoutTheme">
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- 时间选择器popWindow 显示消失动画 -->
    <style name="time_popup_window_anim_style">
        <item name="android:windowEnterAnimation">@anim/time_picker_anim_enter_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/time_picker_anim_exit_bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="comment_suiuu_details">
        <item name="android:layout_marginLeft">@dimen/layout_8dp</item>
        <item name="android:layout_marginRight">@dimen/layout_8dp</item>
        <item name="android:layout_marginTop">@dimen/layout_8dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_star_drawable</item>
        <item name="android:minHeight">@dimen/layout_10dp</item>
        <item name="android:maxHeight">@dimen/layout_20dp</item>
    </style>

</resources>