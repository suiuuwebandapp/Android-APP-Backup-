<resources>

    <!-- Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.-->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--Theme.AppCompat.Light.NoActionBar-->
    <!--android:Theme.Light.NoTitleBar-->
    <style name="FullBleedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppReleaseTheme" parent="AppNewBaseTheme">
        <item name="colorPrimary">@color/backgroundColor</item>
    </style>

    <style name="AppAccountTheme" parent="AppNewBaseTheme">
        <item name="colorPrimary">@color/tr_black</item>
    </style>

    <style name="AppCustomTheme" parent="AppNewBaseTheme">
        <item name="colorPrimaryDark">@color/topColor</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="AppNewBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

</resources>