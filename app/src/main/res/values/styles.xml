<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppNewBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColorDark</item>
    </style>

    <style name="AppMainTheme" parent="AppNewBaseTheme">
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColorDark</item>
    </style>

    <style name="AppFullScreenTheme" parent="AppNewBaseTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- 时间选择器popWindow 显示消失动画 -->
    <style name="time_popup_window_anim_style">
        <item name="android:windowEnterAnimation">@anim/time_picker_anim_enter_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/time_picker_anim_exit_bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="comment_suiuu_details">
        <item name="android:layout_marginLeft">@dimen/layout_8dp</item>
        <item name="android:layout_marginRight">@dimen/layout_8dp</item>
        <item name="android:layout_marginTop">@dimen/layout_8dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_star_drawable</item>
        <item name="android:minHeight">@dimen/layout_10dp</item>
        <item name="android:maxHeight">@dimen/layout_20dp</item>
    </style>

</resources>