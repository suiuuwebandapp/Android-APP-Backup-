<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/suiuu_pay_tool_bar"
        style="@style/AppToolBar"
        app:navigationIcon="@drawable/back"
        app:title="@string/Pay"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:id="@+id/top"
        style="@style/comment_suiuu_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suiuu_pay_tool_bar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/suiuu_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_4dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/layout_18sp" />

        <TextView
            android:id="@+id/suiuu_order_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_4dp"
            android:text="@string/OrderCreateTime"
            android:textColor="@color/textColor"
            android:textSize="@dimen/layout_16sp" />

        <TextView
            android:id="@+id/suiuu_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_4dp"
            android:text="@string/OrderNumber"
            android:textColor="@color/textColor"
            android:textSize="@dimen/layout_16sp" />

        <TextView
            android:id="@+id/suiuu_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_4dp"
            android:text="@string/TotalPrices"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/layout_16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_center_message"
        style="@style/comment_suiuu_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_bottom_message"
        style="@style/comment_suiuu_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_center_message"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pay_wechat"
            android:layout_width="@dimen/layout_170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_8dp"
            android:background="@drawable/btn_main_color"
            android:gravity="center"
            android:padding="@dimen/layout_5dp"
            android:text="@string/WeChatPay"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_18sp" />

        <TextView
            android:id="@+id/tv_pay_alipay"
            android:layout_width="@dimen/layout_170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/layout_8dp"
            android:background="@drawable/bt_wechat_bg"
            android:gravity="center"
            android:padding="@dimen/layout_5dp"
            android:text="@string/_AliPay"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_18sp" />

    </LinearLayout>

</RelativeLayout>