<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_tripgallery_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_120dp"
            android:background="@drawable/trip_gallery_search_bg" />

        <TextView
            android:id="@+id/tv_trip_grllery_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tv_bg_trip_gallery_search"
            android:drawableLeft="@drawable/main_search"
            android:drawablePadding="@dimen/layout_2dp"
            android:text="去哪看看"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/layout_18sp" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/small_tag"
        android:drawablePadding="@dimen/layout_10dp"
        android:text="标签"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/layout_18sp"
        android:background="@color/white"
        android:padding="@dimen/layout_5dp"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_80dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:background="@color/white"
            android:id="@+id/galleryLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    <com.minglang.suiuu.customview.ReFlashListView
        android:id="@+id/lv_suiuu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none" />

</LinearLayout>