<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_msg_question_7_head_image_view"
        android:layout_width="@dimen/layout_50dp"
        android:layout_height="@dimen/layout_50dp"
        android:layout_margin="@dimen/layout_10dp"
        android:clickable="false"
        android:focusable="false"
        fresco:failureImage="@drawable/default_head_image_error"
        fresco:failureImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/default_head_image"
        fresco:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_msg_question_7_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/layout_5dp"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/layout_18sp"
                tools:text="@string/userName" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/layout_5dp"
                android:textSize="@dimen/layout_18sp"
                android:text="@string/Answer_" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/layout_5dp"
                android:text="@string/Problem_"
                android:textSize="@dimen/layout_18sp" />

            <TextView
                android:id="@+id/item_msg_question_7_problem_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_5dp"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/layout_18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>