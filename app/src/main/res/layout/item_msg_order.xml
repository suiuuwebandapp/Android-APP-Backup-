<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_80dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_msg_order_head_image_view"
        android:layout_width="@dimen/layout_50dp"
        android:layout_height="@dimen/layout_50dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/layout_10dp"
        android:clickable="false"
        android:focusable="false"
        fresco:failureImage="@drawable/default_head_image_error"
        fresco:failureImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/default_head_image"
        fresco:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/item_msg_order_head_image_view"
        android:layout_toRightOf="@+id/item_msg_order_head_image_view"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_msg_order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/userName"
            android:textSize="@dimen/layout_18sp" />

        <TextView
            android:id="@+id/item_msg_order_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in"
            android:textSize="@dimen/layout_18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_msg_order_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PurchaseSuiuu"
            android:textSize="@dimen/layout_18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_msg_order_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:textSize="@dimen/layout_18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_msg_order_confirm_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ConfirmationRefund"
            android:textSize="@dimen/layout_18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_msg_order_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Confirm"
            android:textSize="@dimen/layout_18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_msg_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/OrderTitle"
            android:textSize="@dimen/layout_18sp" />

    </LinearLayout>

</RelativeLayout>