<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/mainShowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">


        <FrameLayout
            android:id="@+id/showLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/top"
                layout="@layout/common_top_layout"/>

            <include
                android:id="@+id/rl_error_item"
                layout="@layout/chat_net_error_item"
                android:visibility="gone"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/main_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tabSelect"
            android:layout_marginBottom="-20dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/main_record"
            android:layout_toStartOf="@+id/main_record"
            android:src="@drawable/icon_main_pic"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/main_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tabSelect"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_main_record"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/main_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tabSelect"
            android:layout_marginBottom="-20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/main_record"
            android:layout_toRightOf="@+id/main_record"
            android:src="@drawable/icon_main_ask"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/tabSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_guide_line"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/tab1"
                style="@style/tabLayout">

                <ImageView
                    android:id="@+id/img1"
                    style="@style/titleImage"
                    android:src="@drawable/icon_main2"/>

                <TextView
                    android:id="@+id/title1"
                    style="@style/titleText"
                    android:text="@string/title1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab2"
                style="@style/tabLayout"
                android:paddingLeft="20dp"
                android:paddingStart="20dp">

                <ImageView
                    android:id="@+id/img2"
                    style="@style/titleImage"
                    android:src="@drawable/icon_loop2"/>

                <TextView
                    android:id="@+id/title2"
                    style="@style/titleText"
                    android:text="@string/title2"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/sendNewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/icon_edit2"/>


            <LinearLayout
                android:id="@+id/tab3"
                style="@style/tabLayout"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/img3"
                    style="@style/titleImage"
                    android:src="@drawable/icon_suiuu2"/>

                <TextView
                    android:id="@+id/title3"
                    style="@style/titleText"
                    android:text="@string/title3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab4"
                style="@style/tabLayout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img4"
                        style="@style/titleImage"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/size22"
                        android:src="@drawable/icon_conversation2"/>

                    <TextView
                        android:id="@+id/unread_msg_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/unread_count_bg"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="invisible"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/title4"
                    style="@style/titleText"
                    android:text="@string/title4"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slideLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/tr_write2">

        <LinearLayout
            android:id="@+id/headLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <com.minglang.suiuu.customview.CircleImageView
                android:id="@+id/headImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:src="@drawable/default_head_image"/>

            <TextView
                android:id="@+id/nickName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/nickname"
                android:textSize="20sp"/>

        </LinearLayout>

        <ListView
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headLayout">

        </ListView>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>