<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_attention_user_head_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/default_head_image2"/>

    <TextView
        android:id="@+id/item_attention_user_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/item_attention_user_head_image"
        android:layout_toRightOf="@+id/item_attention_user_head_image"
        android:text="New Text"/>

    <TextView
        android:id="@+id/item_attention_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_attention_user_content"
        android:layout_alignLeft="@+id/item_attention_user_content"
        android:layout_alignStart="@+id/item_attention_user_content"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:text="New Text"/>
</RelativeLayout>
