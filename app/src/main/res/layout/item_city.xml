<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/city"
        android:id="@+id/item_city_name"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginStart="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_5dp"
        android:layout_marginBottom="@dimen/layout_5dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:layout_marginEnd="@dimen/layout_10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_city_index_letter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/a"
        android:paddingLeft="@dimen/layout_15dp"
        android:textSize="20sp"
        android:background="@color/textColor"
        android:textColor="@color/white"
        android:id="@+id/item_city_index_letter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
