<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_120dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_community_header_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.minglang.suiuu.customview.CircleImageView
            android:id="@+id/item_community_header_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_head_image"/>

        <TextView
            android:id="@+id/item_community_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_community_header_image"
            android:layout_marginLeft="@dimen/layout_8dp"
            android:layout_marginRight="@dimen/layout_8dp"
            android:layout_marginTop="@dimen/layout_5dp"
            android:text="New Text"
            android:textSize="@dimen/layout_18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_community_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:layout_marginStart="@dimen/layout_5dp"
            android:layout_marginTop="@dimen/layout_5dp"
            android:maxEms="20"
            android:singleLine="true"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:layout_marginStart="@dimen/layout_5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/item_community_content"/>
    </LinearLayout>

</LinearLayout>
