<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/default_background_image"/>

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:layout_marginStart="@dimen/layout_5dp"
            android:layout_marginTop="@dimen/layout_5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/tempText"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_marginStart="@dimen/layout_5dp"
                android:layout_marginTop="@dimen/layout_5dp"
                android:drawableLeft="@drawable/icon_praise"
                android:drawableStart="@drawable/icon_praise"
                android:text="20"/>

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/layout_5dp"
                android:layout_marginRight="@dimen/layout_5dp"
                android:layout_marginTop="@dimen/layout_5dp"
                android:drawableLeft="@drawable/icon_reply"
                android:drawableStart="@drawable/icon_reply"
                android:text="10"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>