<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部Layout-->
    <LinearLayout
        android:id="@+id/mySuiuuTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mySuiuuToolbar"
            style="@style/AppToolBar"
            app:navigationIcon="@drawable/back"
            app:title="@string/MySuiuu"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/mySuiuuTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabIndicatorColor="@color/mainColor"
            app:tabIndicatorHeight="@dimen/layout_2dp"
            app:tabTextAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>

    <!--内容部分-->
    <android.support.v4.view.ViewPager
        android:id="@+id/mySuiuuViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mySuiuuTitleLayout"/>

</RelativeLayout>