<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/about_suiuu_tool_bar"
        style="@style/AppToolBar"
        app:navigationIcon="@drawable/back"
        app:title="@string/AboutSuiuu"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/about_suiuu_tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_suiuu_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/logo"
                android:padding="@dimen/layout_15dp"
                android:src="@drawable/icon_about_logo"/>

            <TextView
                android:id="@+id/about_suiuu_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/layout_8dp"
                android:text="@string/VersionName"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/about_suiuu_evaluation"
                style="@style/settingTextView"
                android:text="@string/Evaluation"/>

            <TextView style="@style/settingDividingLine"/>

            <TextView
                android:id="@+id/about_suiuu_help"
                style="@style/settingTextView"
                android:text="@string/UseHelp"/>

            <TextView style="@style/settingDividingLine"/>

            <TextView
                android:id="@+id/about_suiuu_update"
                style="@style/settingTextView"
                android:text="@string/CheckUpdate"/>

            <TextView style="@style/settingDividingLine"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>