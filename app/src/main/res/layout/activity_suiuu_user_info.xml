<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.minglang.suiuu.activity.SuiuuUserInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_250dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/suiuu_user_info_main_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_background_image"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/tr_black">

            <ImageView
                android:id="@+id/suiuu_user_info_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back"/>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/MySuiuu"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <com.minglang.suiuu.customview.CircleImageView
            android:id="@+id/suiuu_user_info_head_image"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="@dimen/layout_60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_head_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/suiuu_user_info_head_image"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/suiuu_user_info_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/userName"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_18sp"/>

            <TextView
                android:id="@+id/suiuu_user_info_location"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/userLocation"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_18sp"/>

            <TextView
                android:id="@+id/suiuu_user_info_intro"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/userSignature"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_18sp"/>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--个人简介-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/layout_5dp"
                            android:text="@string/IndividualResume"
                            android:textSize="@dimen/layout_16sp"/>

                        <TextView
                            android:id="@+id/suiuu_user_info_individual_resume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/layout_5dp"
                            android:layout_marginLeft="@dimen/layout_5dp"
                            android:layout_marginRight="@dimen/layout_5dp"
                            android:layout_marginStart="@dimen/layout_5dp"
                            android:text="@string/app_name"
                            android:textSize="@dimen/layout_18sp"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_1dp"
                        android:layout_marginBottom="@dimen/layout_4dp"
                        android:layout_marginTop="@dimen/layout_4dp"
                        android:background="@color/tr_black"/>

                    <!--电话号码-->
                    <LinearLayout
                        android:id="@+id/phoneNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/layout_4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_5dp"
                            android:layout_marginStart="@dimen/layout_5dp"
                            android:layout_weight="0.2"
                            android:text="@string/phoneNumber"
                            android:textSize="@dimen/layout_16sp"/>

                        <TextView
                            android:id="@+id/suiuu_user_info_phone_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_5dp"
                            android:layout_marginStart="@dimen/layout_5dp"
                            android:layout_weight="0.4"
                            android:singleLine="true"
                            android:textSize="@dimen/layout_16sp"/>

                        <ImageView
                            android:id="@+id/suiuu_user_info_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_call"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/textView31"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_1dp"
                        android:layout_marginBottom="@dimen/layout_4dp"
                        android:layout_marginTop="@dimen/layout_4dp"
                        android:background="@color/tr_black"/>

                    <!--邮箱-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/layout_5dp"
                            android:text="@string/Email"
                            android:textSize="@dimen/layout_16sp"/>

                        <TextView
                            android:id="@+id/suiuu_user_info_email_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_5dp"
                            android:layout_marginRight="@dimen/layout_5dp"
                            android:layout_marginStart="@dimen/layout_5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/layout_16sp"/>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_5dp"
                            android:layout_marginStart="@dimen/layout_5dp"
                            android:text="@string/tripCount"
                            android:textSize="@dimen/layout_16sp"/>

                        <TextView
                            android:id="@+id/suiuu_user_info_trip_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_5dp"
                            android:layout_marginRight="@dimen/layout_5dp"
                            android:layout_toEndOf="@+id/textView33"
                            android:layout_toLeftOf="@+id/suiuu_user_info_indicator"
                            android:layout_toRightOf="@+id/textView33"
                            android:layout_toStartOf="@+id/suiuu_user_info_indicator"
                            android:textSize="@dimen/layout_16sp"/>

                        <RatingBar
                            android:id="@+id/suiuu_user_info_indicator"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:isIndicator="true"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/textView34"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_1dp"
                        android:background="@color/tr_black"/>

                    <TextView
                        android:id="@+id/suiuu_user_info_his_suiuu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginLeft="@dimen/layout_5dp"
                        android:layout_marginStart="@dimen/layout_5dp"
                        android:layout_marginTop="@dimen/layout_8dp"
                        android:singleLine="true"
                        android:text="@string/hisSuiuu"
                        android:textSize="@dimen/layout_16sp"/>

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_1dp"
                        android:background="@color/tr_black"/>

                    <TextView
                        android:id="@+id/suiuu_user_info_his_participation_suiuu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/layout_5dp"
                        android:layout_marginLeft="@dimen/layout_5dp"
                        android:layout_marginStart="@dimen/layout_5dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:singleLine="true"
                        android:text="@string/hisParticipationSuiuu"
                        android:textSize="@dimen/layout_16sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
