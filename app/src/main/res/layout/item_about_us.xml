<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_about_us_title"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_10dp"
        android:padding="@dimen/layout_5dp"
        android:text="@string/title"
        android:textSize="@dimen/layout_18sp"/>

    <TextView
        android:id="@+id/item_about_us_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_5dp"
        android:text="@string/tempContent"
        android:textSize="@dimen/layout_18sp"/>

</LinearLayout>