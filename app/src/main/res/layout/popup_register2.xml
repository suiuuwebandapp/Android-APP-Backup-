<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000">

    <Button
        android:id="@+id/popup_register_button"
        style="@style/registerButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/Register"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/popup_register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/popup_register_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="@string/please_input_confirm_password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/textColor"/>

    <EditText
        android:id="@+id/popup_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/popup_register_confirm_password"
        android:layout_alignEnd="@+id/popup_register_confirm_password"
        android:layout_alignLeft="@+id/popup_register_confirm_password"
        android:layout_alignRight="@+id/popup_register_confirm_password"
        android:layout_alignStart="@+id/popup_register_confirm_password"
        android:ems="10"
        android:hint="@string/please_input_password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/textColor"/>

    <EditText
        android:id="@+id/popup_register2_captcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/popup_register_password"
        android:layout_alignEnd="@+id/popup_register_password"
        android:layout_alignLeft="@+id/popup_register_password"
        android:layout_alignRight="@+id/popup_register_password"
        android:layout_alignStart="@+id/popup_register_password"
        android:layout_marginBottom="10dp"
        android:hint="@string/please_input_obtain_captcha"
        android:textColor="@color/white"
        android:textColorHint="@color/textColor"/>

</RelativeLayout>