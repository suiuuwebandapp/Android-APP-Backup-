<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/attention_tool_bar"
        style="@style/AppToolBar2"
        app:navigationIcon="@drawable/back"
        app:title="@string/Attention"
        app:titleTextColor="@color/white" />

    <android.support.design.widget.TabLayout
        android:id="@+id/attention_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/mainColor"
        app:tabIndicatorHeight="@dimen/layout_2dp"
        app:tabTextAppearance="?android:attr/textAppearanceMedium" />

    <android.support.v4.view.ViewPager
        android:id="@+id/attention_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>