<LinearLayout
    android:id="@+id/attentionRootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/attentionTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:background="@color/mainColor">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/Attention"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/attentionBack"
            style="@style/backKeyStyle"
            android:contentDescription="@string/app_name"
            android:src="@drawable/back"/>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/attentionTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/mainColor"
        app:tabIndicatorHeight="@dimen/layout_1dp"
        app:tabTextAppearance="?android:attr/textAppearanceMedium"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/attentionPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>