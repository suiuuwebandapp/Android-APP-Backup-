<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attentionRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/attentionTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tr_black">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/attention"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/AttentionBack"
            style="@style/backKeyStyle"
            android:src="@drawable/back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/attention_theme_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/themes"
            android:textColor="@color/slider_line_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/attention_user_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/areas"
            android:textColor="@color/textColor"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/attention_sliderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/slider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/slider_line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/attentionPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
