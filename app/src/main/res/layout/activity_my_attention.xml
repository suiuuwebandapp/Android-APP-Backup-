<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/myAttentionRootLayout"
    tools:context="com.minglang.suiuu.activity.MyAttentionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/tr_black">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/MyAttention"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/MyAttentionBack"
            style="@style/backKeyStyle"
            android:src="@drawable/back" />
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyAttentionList" />

</LinearLayout>
