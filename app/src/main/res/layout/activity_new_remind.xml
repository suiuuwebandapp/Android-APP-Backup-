<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/new_remind_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarLayoutTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/new_remind_toolbar"
            style="@style/AppToolBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppMainTheme"
            app:title="@string/NewRemind"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/new_remind_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabIndicatorColor="@color/mainColor"
            app:tabIndicatorHeight="@dimen/layout_1dp"
            app:tabTextAppearance="?android:attr/textAppearanceMedium"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/newRemindPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</android.support.design.widget.CoordinatorLayout>