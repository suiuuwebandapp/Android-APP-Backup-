<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/layout_15dp"
        android:background="@drawable/popu_choice_suiuu">

        <TextView
            android:id="@+id/tv_country"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家"
            android:textColor="@drawable/btn_popuchoice_suiuu"
            android:textSize="@dimen/layout_25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_15dp" />

        <View

            android:layout_width="@dimen/layout_80dp"
            android:layout_height="@dimen/layout_1dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_10dp" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"
            android:textColor="@drawable/btn_popuchoice_suiuu"
            android:textSize="@dimen/layout_25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_15dp" />

        <View

            android:layout_width="@dimen/layout_80dp"
            android:layout_height="@dimen/layout_1dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_10dp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textColor="@drawable/btn_popuchoice_suiuu"
            android:textSize="@dimen/layout_25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_15dp" />

    </LinearLayout>
</RelativeLayout>