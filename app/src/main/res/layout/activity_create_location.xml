<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:background="@color/mainColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/CreateLocation"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_18sp"/>

        <ImageView
            android:id="@+id/iv_create_location_callback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/iv_create_location_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/layout_8dp"
            android:src="@drawable/icon_sure"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_top_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/layout_20dp"
        android:background="@drawable/gray_input">

        <EditText
            android:id="@+id/et_create_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:hint="@string/InputCreateLocationName"
            android:padding="@dimen/layout_5dp"
            android:singleLine="true"
            android:textSize="@dimen/layout_15sp"/>

    </RelativeLayout>

</LinearLayout>