<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personalRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.minglang.suiuu.activity.PersonalActivity">


    <RelativeLayout
        android:id="@+id/personalBackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user_background"
            android:id="@+id/personalHeadLayoutImage"
            android:scaleType="fitXY"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:drawableLeft="@drawable/icon_praise"
            android:drawableStart="@drawable/icon_praise"
            android:drawablePadding="5dp"
            android:id="@+id/personalCollection"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginStart="@dimen/layout_10dp"/>

        <com.minglang.suiuu.customview.CircleImageView
            android:layout_width="@dimen/layout_80dp"
            android:layout_height="@dimen/layout_80dp"
            android:id="@+id/personalHeadImage"
            android:src="@drawable/default_head_image3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/personalHeadImage">

            <TextView
                style="@style/otherUserInfo"
                android:textColor="@color/white"
                android:text="@string/blankNickName"
                android:id="@+id/personalName"/>

            <TextView
                style="@style/otherUserInfo"
                android:textColor="@color/white"
                android:text=""
                android:id="@+id/personalLocation"/>

            <TextView
                style="@style/otherUserInfo"
                android:textColor="@color/white"
                android:text="@string/blankSignature"
                android:id="@+id/personalSignature"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout9">

        <ImageView
            android:id="@+id/personalBack"
            style="@style/backKeyStyle"
            android:src="@drawable/back"/>


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/personalShowPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/personalBackgroundLayout"/>

</RelativeLayout>
