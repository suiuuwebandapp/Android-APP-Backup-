<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_5dp"
        android:src="@drawable/exit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_40dp"
        android:drawablePadding="@dimen/layout_5dp"
        android:drawableTop="@drawable/login_portrait"
        android:text="@string/login_message"
        android:textColor="@color/text_color2" />

    <TextView
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_20dp"
        android:background="@drawable/btn_login_style"
        android:paddingBottom="@dimen/layout_8dp"
        android:paddingLeft="@dimen/layout_70dp"
        android:paddingRight="@dimen/layout_70dp"
        android:paddingTop="@dimen/layout_8dp"
        android:text="@string/Login"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_15sp" />

    <TextView
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_10dp"
        android:background="@drawable/btn_login_style"
        android:paddingBottom="@dimen/layout_8dp"
        android:paddingLeft="@dimen/layout_70dp"
        android:paddingRight="@dimen/layout_70dp"
        android:paddingTop="@dimen/layout_8dp"
        android:text="@string/Register"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_60dp"
        android:text="@string/socialLogin"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_16dp"
            android:src="@drawable/login_sina" />

        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_16dp"
            android:src="@drawable/login_wechat" />

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_16dp"
            android:src="@drawable/login_qq" />

    </LinearLayout>

</LinearLayout>