<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <!--支付/取消订单Layout-->
    <android.support.v7.widget.CardView
        android:id="@+id/order_details_bottom_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/layout_5dp"
            android:visibility="visible">

            <Button
                android:id="@+id/order_details_cancel"
                android:layout_width="@dimen/layout_100dp"
                android:layout_height="@dimen/layout_40dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginLeft="@dimen/layout_60dp"
                android:layout_marginStart="@dimen/layout_60dp"
                android:background="@drawable/shape_cancel_button_background"
                android:text="@string/cancelOrder"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/order_details_repay"
                android:layout_width="@dimen/layout_100dp"
                android:layout_height="@dimen/layout_40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginEnd="@dimen/layout_60dp"
                android:layout_marginRight="@dimen/layout_60dp"
                android:background="@drawable/shape_ok_button_background"
                android:text="@string/Pay"
                android:textColor="@color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--退款/确认Layout-->
    <android.support.v7.widget.CardView
        android:id="@+id/order_details_bottom_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/layout_5dp"
            android:visibility="visible">

            <Button
                android:id="@+id/order_details_apply_refund"
                android:layout_width="@dimen/layout_100dp"
                android:layout_height="@dimen/layout_40dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginLeft="@dimen/layout_60dp"
                android:layout_marginStart="@dimen/layout_60dp"
                android:background="@drawable/shape_cancel_button_background"
                android:text="@string/applyRefund"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/order_details_confirm"
                android:layout_width="@dimen/layout_100dp"
                android:layout_height="@dimen/layout_40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginEnd="@dimen/layout_60dp"
                android:layout_marginRight="@dimen/layout_60dp"
                android:background="@drawable/shape_ok_button_background"
                android:text="@string/confirmPlay"
                android:textColor="@color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--删除订单Layout-->
    <android.support.v7.widget.CardView
        android:id="@+id/order_details_bottom_3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/layout_5dp"
            android:visibility="visible">

            <Button
                android:id="@+id/order_details_delete"
                android:layout_width="@dimen/layout_100dp"
                android:layout_height="@dimen/layout_40dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginLeft="@dimen/layout_60dp"
                android:layout_marginStart="@dimen/layout_60dp"
                android:background="@drawable/shape_cancel_button_background"
                android:text="@string/deleteOrder"
                android:textColor="@color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>