<RelativeLayout
    android:id="@+id/contactUsRootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/contact_us_tool_bar"
        style="@style/AppToolBar"
        app:navigationIcon="@drawable/back"
        app:title="@string/ContactUs"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contact_us_tool_bar"
        android:layout_above="@+id/contact_us_feed_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/contactUsItemLayout">

                <TextView
                    style="@style/contactUsLeftTextView"
                    android:text="@string/WebSite"/>

                <TextView
                    style="@style/contactUsRightTextView"
                    android:text="@string/WebsitePath"/>

            </LinearLayout>

            <TextView style="@style/settingDividingLine"/>

            <LinearLayout style="@style/contactUsItemLayout">

                <TextView
                    style="@style/contactUsLeftTextView"
                    android:text="@string/Phone"/>

                <TextView
                    style="@style/contactUsRightTextView"
                    android:text="@string/PhoneNumber"/>

            </LinearLayout>

            <TextView style="@style/settingDividingLine"/>

            <LinearLayout style="@style/contactUsItemLayout">

                <TextView
                    style="@style/contactUsLeftTextView"
                    android:text="@string/Address"/>

                <TextView
                    style="@style/contactUsRightTextView"
                    android:text="@string/AddressDetails"/>

            </LinearLayout>

            <TextView style="@style/settingDividingLine"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/contact_us_feed_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/layout_10dp"
        android:background="@drawable/setting_relevant_btn_selector"
        android:text="@string/FeedbackInfo"
        android:textColor="@drawable/setting_relevant_btn_text_color_selector"
        android:textSize="@dimen/layout_18sp"/>

</RelativeLayout>