<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_personal_travel_main_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_150dp"
            fresco:actualImageScaleType="fitXY"
            fresco:failureImage="@drawable/loading_error"
            fresco:placeholderImage="@drawable/loading"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_personal_travel_main_image"
            android:background="@color/white">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_personal_travel_head_image"
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="@dimen/layout_50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/layout_5dp"
                fresco:failureImage="@drawable/default_head_image_error"
                fresco:failureImageScaleType="fitXY"
                fresco:placeholderImage="@drawable/default_head_image"
                fresco:roundAsCircle="true"/>

            <TextView
                android:id="@+id/item_personal_travel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/layout_5dp"
                android:layout_marginRight="@dimen/layout_5dp"
                android:layout_toEndOf="@+id/item_personal_travel_head_image"
                android:layout_toRightOf="@+id/item_personal_travel_head_image"
                android:padding="@dimen/layout_5dp"
                android:singleLine="true"
                android:text="@string/suiuu"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>