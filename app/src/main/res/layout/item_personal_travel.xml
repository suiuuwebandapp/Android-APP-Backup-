<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_personal_travel_main_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_200dp"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/loading"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_personal_travel_main_image"
        android:background="@color/white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_personal_travel_head_image"
            android:layout_width="@dimen/layout_50dp"
            android:layout_height="@dimen/layout_50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/layout_8dp"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/default_head_image"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/item_personal_travel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_personal_travel_head_image"
            android:layout_toRightOf="@+id/item_personal_travel_head_image"
            android:text="@string/suiuu"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>

</RelativeLayout>