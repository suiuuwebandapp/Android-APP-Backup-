<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <com.minglang.suiuu.customview.CircleImageView
            android:id="@+id/new_oder_user_head_image"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="@dimen/layout_60dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/layout_5dp"
            android:src="@drawable/default_head_image"/>

        <TextView
            android:id="@+id/new_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/new_oder_user_head_image"
            android:layout_toLeftOf="@+id/new_oder_money_price"
            android:layout_toRightOf="@+id/new_oder_user_head_image"
            android:layout_toStartOf="@+id/new_oder_money_price"
            android:singleLine="true"
            android:text="@string/title"
            android:textSize="@dimen/layout_18sp"/>

        <TextView
            android:id="@+id/new_oder_money_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/new_oder_user_head_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/new_oder_user_head_image"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:layout_marginStart="@dimen/layout_5dp"
            android:paddingEnd="@dimen/layout_5dp"
            android:paddingLeft="@dimen/layout_5dp"
            android:paddingRight="@dimen/layout_5dp"
            android:paddingTop="@dimen/layout_8dp"
            android:text="@string/tempPrice"
            android:textSize="@dimen/layout_16sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="@dimen/layout_60dp"
        android:layout_height="@dimen/layout_60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout7"
        android:layout_marginBottom="@dimen/layout_5dp"
        android:layout_marginEnd="@dimen/layout_5dp"
        android:layout_marginLeft="@dimen/layout_5dp"
        android:layout_marginRight="@dimen/layout_5dp"
        android:layout_marginStart="@dimen/layout_5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout7"
        android:layout_toEndOf="@+id/textView29"
        android:layout_toRightOf="@+id/textView29"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_oder_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_5dp"
            android:layout_marginEnd="@dimen/layout_5dp"
            android:layout_marginRight="@dimen/layout_5dp"
            android:singleLine="true"
            android:text="@string/tempIntro"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_order_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/tempBeginDate"/>

            <TextView
                android:id="@+id/new_oder_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/tempStartTime"/>

            <TextView
                android:id="@+id/new_order_people_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/tempPersonalNumber"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>