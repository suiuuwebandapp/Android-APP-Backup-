<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_today_star_image"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_background_image"/>

    <com.minglang.suiuu.customview.CircleImageView
        android:layout_width="@dimen/layout_60dp"
        android:layout_height="@dimen/layout_60dp"
        android:id="@+id/item_today_star_head_image"
        android:src="@drawable/default_head_image2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:id="@+id/item_today_star_user_name"
        android:layout_below="@+id/item_today_star_head_image"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/white"
        android:id="@+id/item_today_star_fans_count"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/item_today_star_user_name"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
