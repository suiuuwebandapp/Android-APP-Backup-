<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/suiuu_root">


    <com.minglang.suiuu.customview.PullToRefreshView
        android:id="@+id/main_pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_suiuu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_12dp"
            android:dividerHeight="@dimen/layout_10dp"
            android:background="@color/white"
            android:scrollbars="none"
            android:layout_marginRight="@dimen/layout_12dp"></ListView>


    </com.minglang.suiuu.customview.PullToRefreshView>

    <TextView
        android:id="@+id/tv_nodata_load"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/loadDataComplete"
        android:gravity="center"
        android:textColor="@color/text_select_true"
        android:textSize="@dimen/layout_20sp"
        android:padding="@dimen/layout_5dp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_search_more"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_150dp"
        android:background="@drawable/suiuu_framlayout_bg"
        android:layout_marginLeft="@dimen/layout_5dp"
        android:layout_marginRight="@dimen/layout_5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/tv_people_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_5dp"
                android:text="@string/people_number"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp" />

            <ImageButton
                android:id="@+id/ib_release"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_below="@+id/tv_people_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_release" />

            <EditText
                android:id="@+id/et_peple_number"
                android:layout_below="@+id/tv_people_number"
                android:layout_toRightOf="@+id/ib_release"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="@dimen/layout_25dp"
                android:background="@color/white"
                android:text="0"
                android:gravity="center"
                android:editable="false"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/ib_plus"
                android:layout_toRightOf="@+id/et_peple_number"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_below="@+id/tv_people_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_plus" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_below="@+id/ib_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_5dp"
                android:text="@string/type"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp"
                android:layout_marginTop="@dimen/layout_8dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_below="@+id/tv_type"
                android:id="@+id/radioGroup1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">


            </LinearLayout>


            <TextView
                android:id="@+id/tv_price_show"
                android:layout_below="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_5dp"
                android:text="@string/price"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp" />

            <TextView
                android:id="@+id/tv_price_range"
                android:layout_below="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_5dp"
                android:text="0 - 5000"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_toRightOf="@+id/tv_price_show"
                android:textColor="@color/login_bg_color"
                android:textSize="@dimen/layout_15sp" />

            <com.minglang.suiuu.customview.rangebar.RangeBar
                android:id="@+id/rangebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_marginRight="@dimen/layout_5dp"
                android:layout_below="@+id/tv_price_show" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
