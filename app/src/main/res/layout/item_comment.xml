<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_80dp"
    >

    <!--评论Item-->

    <com.minglang.suiuu.customview.CircleImageView
        android:layout_marginTop="@dimen/layout_5dp"
        android:layout_width="@dimen/layout_50dp"
        android:layout_height="@dimen/layout_50dp"
        android:id="@+id/item_comment_head_image"
        android:src="@drawable/default_head_image2"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_comment_title"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="@dimen/layout_20sp"
        android:singleLine="true"
        android:textColor="@color/comment_title_color2"
        android:layout_alignTop="@+id/item_comment_head_image"
        android:layout_toRightOf="@+id/item_comment_head_image"
        android:layout_toEndOf="@+id/item_comment_head_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_comment_content"
        android:layout_marginTop="@dimen/layout_8dp"
        android:textSize="@dimen/layout_15sp"
        android:textColor="@color/tr_black"
        android:maxLines="2"
        android:layout_below="@+id/item_comment_title"
        android:layout_alignLeft="@+id/item_comment_title"
        android:layout_alignStart="@+id/item_comment_title" />


</RelativeLayout>
