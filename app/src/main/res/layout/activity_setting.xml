<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingRootLayout"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.minglang.suiuu.activity.SettingActivity">


    <include
        android:id="@+id/top_bar"
        layout="@layout/common_top2_layout" />

    <ListView
        android:id="@+id/settingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <Button

        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_style_alert_dialog_special"
        android:text="@string/button_logout"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>
