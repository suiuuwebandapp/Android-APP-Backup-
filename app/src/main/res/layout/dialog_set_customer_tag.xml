<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginStart="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_5dp"
        android:gravity="start"
        android:text="设置自定义标签"
        android:textColor="@color/help_view"
        android:textSize="@dimen/layout_18sp" />

    <EditText
        android:id="@+id/et_input_customer_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_10dp"
        android:background="@drawable/image_view_border_style"
        android:hint="输入标签"
        android:padding="@dimen/layout_10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_10dp">

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_50dp"
            android:layout_marginStart="@dimen/layout_50dp"
            android:background="@drawable/background_template_tag_filled"
            android:text="@android:string/ok"
            android:textColor="@color/textColor"
            android:textSize="@dimen/layout_15sp" />

        <Button
            android:id="@+id/bt_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/layout_50dp"
            android:layout_marginRight="@dimen/layout_50dp"
            android:background="@drawable/background_template_tag_filled"
            android:text="@android:string/cancel"
            android:textColor="@color/textColor" />

    </RelativeLayout>

</LinearLayout>