<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_200dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_background_image"/>

                <TextView
                    android:id="@+id/order_details_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/layout_8dp"
                    android:layout_marginLeft="@dimen/layout_8dp"
                    android:layout_marginStart="@dimen/layout_8dp"
                    android:layout_toLeftOf="@+id/order_details_indicator"
                    android:layout_toStartOf="@+id/order_details_indicator"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/layout_16sp"/>

                <TextView
                    android:id="@+id/order_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/order_details_money"
                    android:layout_alignLeft="@+id/order_details_money"
                    android:layout_alignStart="@+id/order_details_money"
                    android:layout_marginBottom="@dimen/layout_5dp"
                    android:layout_marginEnd="@dimen/layout_8dp"
                    android:layout_marginRight="@dimen/layout_8dp"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"/>

                <RatingBar
                    android:id="@+id/order_details_indicator"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/order_details_money"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/layout_8dp"
                    android:layout_marginRight="@dimen/layout_8dp"
                    android:isIndicator="true"
                    android:rating="3"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.minglang.suiuu.customview.CircleImageView
                    android:id="@+id/view"
                    android:layout_width="@dimen/layout_60dp"
                    android:layout_height="@dimen/layout_60dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/layout_8dp"
                    android:src="@drawable/default_head_image2"/>

                <TextView
                    android:id="@+id/order_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/view"
                    android:layout_toLeftOf="@+id/textView6"
                    android:layout_toRightOf="@+id/view"
                    android:layout_toStartOf="@+id/textView6"
                    android:text="@string/app_name"
                    android:textSize="@dimen/layout_16sp"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/layout_5dp"
                    android:layout_marginRight="@dimen/layout_5dp"
                    android:layout_toEndOf="@+id/textView6"
                    android:layout_toRightOf="@+id/textView6"
                    android:gravity="end"
                    android:text="@string/app_name"
                    android:textSize="@dimen/layout_16sp"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:singleLine="true"
                        android:text="@string/ContactPhone"
                        android:textSize="@dimen/layout_16sp"/>

                    <TextView
                        android:id="@+id/order_details_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/zero"
                        android:textSize="@dimen/layout_16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:singleLine="true"
                        android:text="@string/DepartureDate"
                        android:textSize="@dimen/layout_16sp"/>

                    <TextView
                        android:id="@+id/order_details_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tempDate"
                        android:textSize="@dimen/layout_16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:singleLine="true"
                        android:text="@string/StartTime"
                        android:textSize="@dimen/layout_16sp"/>

                    <TextView
                        android:id="@+id/order_details_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tempTime"
                        android:textSize="@dimen/layout_16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:singleLine="true"
                        android:text="@string/SuiuuNumber"
                        android:textSize="@dimen/layout_16sp"/>

                    <TextView
                        android:id="@+id/order_details_suiuu_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/tempNumber"
                        android:textSize="@dimen/layout_16sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:text="@string/AdditionalServices"
                        android:textSize="@dimen/layout_16sp"/>

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:text="New Text"
                        android:textSize="@dimen/layout_16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:text="@string/Shuttle"
                        android:textSize="@dimen/layout_16sp"/>

                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:text="New Text"
                        android:textSize="@dimen/layout_16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView47"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:text="@string/ProvideTickets"
                        android:textSize="@dimen/layout_16sp"/>

                    <TextView
                        android:id="@+id/textView48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_5dp"
                        android:text="New Text"
                        android:textSize="@dimen/layout_16sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/layout_5dp"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/order_details_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/back"/>

</RelativeLayout>