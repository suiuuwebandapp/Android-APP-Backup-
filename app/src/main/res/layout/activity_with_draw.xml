<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor2"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/with_draw_top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_120dp"
        android:layout_margin="@dimen/layout_10dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_8dp"
                android:text="@string/IWithDraw"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="@dimen/layout_200dp"
                android:layout_height="@dimen/layout_50dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/MoneyHint"
                android:inputType="number"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_10dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_8dp"
                android:text="@string/SelectDrawAccount"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/with_draw_ali_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_right_arrow"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center"
                android:padding="@dimen/layout_10dp"
                android:text="@string/AliPay"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_20sp"/>

            <TextView style="@style/settingDividingLine"/>

            <TextView
                android:id="@+id/with_draw_we_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_right_arrow"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center"
                android:padding="@dimen/layout_10dp"
                android:text="@string/WeChatPay"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_20sp"/>

            <TextView style="@style/settingDividingLine"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>