<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_participate_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_200dp"
        android:layout_alignParentTop="true"
        fresco:failureImage="@drawable/loading_error"
        fresco:failureImageScaleType="fitCenter"
        fresco:placeholderImage="@drawable/loading"
        fresco:placeholderImageScaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/item_participate_content_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/item_participate_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/tr_black">

        <TextView
            android:id="@+id/item_participate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_participate_intro"
            android:layout_alignEnd="@+id/item_participate_intro"
            android:layout_alignLeft="@+id/item_participate_intro"
            android:layout_alignRight="@+id/item_participate_intro"
            android:layout_alignStart="@+id/item_participate_intro"
            android:singleLine="true"
            android:text="@string/Title"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/item_participate_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="@dimen/layout_5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/layout_5dp"
            android:layout_marginStart="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </RelativeLayout>

</RelativeLayout>
