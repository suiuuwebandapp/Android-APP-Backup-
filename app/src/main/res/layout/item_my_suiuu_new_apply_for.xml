<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头像-->
    <view
        android:id="@+id/item_my_suiuu_new_apply_for_head_image"
        class="com.minglang.suiuu.customview.CircleImageView"
        android:layout_width="@dimen/layout_45dp"
        android:layout_height="@dimen/layout_45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/layout_10dp"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginStart="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:src="@drawable/default_head_image"/>

    <!--用户名-->
    <TextView
        android:id="@+id/item_my_suiuu_new_apply_for_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_5dp"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_5dp"
        android:layout_marginStart="@dimen/layout_10dp"
        android:layout_toEndOf="@+id/item_my_suiuu_new_apply_for_head_image"
        android:layout_toLeftOf="@+id/item_my_suiuu_new_apply_for_ignore"
        android:layout_toRightOf="@+id/item_my_suiuu_new_apply_for_head_image"
        android:layout_toStartOf="@+id/item_my_suiuu_new_apply_for_ignore"
        android:text="@string/user_name"
        android:textSize="@dimen/layout_18sp"/>

    <!--忽略按钮-->
    <Button
        android:id="@+id/item_my_suiuu_new_apply_for_ignore"
        android:layout_width="@dimen/layout_65dp"
        android:layout_height="@dimen/layout_45dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_5dp"
        android:layout_marginRight="@dimen/layout_5dp"
        android:layout_toLeftOf="@+id/item_my_suiuu_new_apply_for_agree"
        android:layout_toStartOf="@+id/item_my_suiuu_new_apply_for_agree"
        android:background="@drawable/item_my_suiuu_selector"
        android:text="@string/Ignore"
        android:textColor="@drawable/item_my_suiuu_text_selector"/>

    <!--同意按钮-->
    <Button
        android:id="@+id/item_my_suiuu_new_apply_for_agree"
        android:layout_width="@dimen/layout_65dp"
        android:layout_height="@dimen/layout_45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_5dp"
        android:layout_marginRight="@dimen/layout_5dp"
        android:background="@drawable/item_my_suiuu_selector"
        android:text="@string/Agree"
        android:textColor="@drawable/item_my_suiuu_text_selector"/>

</RelativeLayout>
