<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/personalRootLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.minglang.suiuu.activity.PersonalSettingActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/tr_black">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/personalSetting"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/personalSettingBack"
            style="@style/backKeyStyle"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/personal_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/layout_5dp"
            android:layout_marginRight="@dimen/layout_5dp"
            android:textColor="@color/text_color1"
            android:textSize="18sp"
            android:text="@string/save"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/personalSettingHeadLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <com.minglang.suiuu.customview.CircleImageView
                    android:id="@+id/headImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:src="@drawable/default_head_image3"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_5dp"
                android:layout_marginBottom="@dimen/layout_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/man"
                    android:textSize="24sp"
                    android:drawableLeft="@drawable/sex_none"
                    android:drawableStart="@drawable/sex_none"
                    android:drawablePadding="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_30dp"
                    android:layout_marginEnd="@dimen/layout_30dp"
                    android:id="@+id/personal_setting_man"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView10"
                    android:layout_toStartOf="@+id/textView10"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/woman"
                    android:id="@+id/personal_setting_woman"
                    android:textSize="24sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/sex_none"
                    android:drawableStart="@drawable/sex_none"
                    android:drawablePadding="@dimen/layout_10dp"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView10"
                    android:layout_toEndOf="@+id/textView10"
                    android:layout_marginLeft="@dimen/layout_30dp"
                    android:layout_marginStart="@dimen/layout_30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/textView10"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/btn_white_pressed">

                <EditText
                    android:id="@+id/editNickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/nickname_hint"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/btn_white_pressed">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/local"
                    android:id="@+id/localDetails"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/layout_15dp"
                    android:layout_marginBottom="@dimen/layout_15dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginStart="@dimen/layout_10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/btn_white_pressed">

                <EditText
                    android:id="@+id/editTrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:ems="10"
                    android:hint="@string/trade_hint"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/btn_white_pressed">

                <EditText
                    android:id="@+id/editSign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:ems="40"
                    android:hint="@string/Signature_hint"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
