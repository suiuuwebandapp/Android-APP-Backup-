<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <include layout="@layout/common_top2_layout"
        android:id="@+id/top"/>

    <ScrollView
        android:layout_below="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_8dp"
            android:layout_marginRight="@dimen/layout_8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/layout_8dp"
                android:text="@string/order_person_info"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connection_name"
                android:textColor="@color/textColor"
                android:layout_margin="@dimen/layout_5dp"
                android:textSize="@dimen/layout_14sp" />

            <EditText
                android:id="@+id/et_your_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="@string/input_name"
                android:padding="@dimen/layout_8dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信号"
                android:layout_margin="@dimen/layout_5dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_14sp"/>

            <EditText
                android:id="@+id/et_we_chat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="选填"
                android:padding="@dimen/layout_8dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_5dp"
                android:text="主要联系号码"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_14sp" />

            <EditText
                android:id="@+id/et_native_phone_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="国内手机号"
                android:padding="@dimen/layout_8dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_5dp"
                android:text="备用联系号码"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_14sp" />

            <EditText
                android:id="@+id/et_standby_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="选填"
                android:padding="@dimen/layout_8dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="紧急联系方式"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_18sp"
                android:layout_marginTop="@dimen/layout_15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connection_name"
                android:textColor="@color/textColor"
                android:layout_margin="@dimen/layout_5dp"
                android:textSize="@dimen/layout_14sp" />

            <EditText
                android:id="@+id/et_actual_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="@string/input_name"
                android:padding="@dimen/layout_8dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_5dp"
                android:text="联系人手机"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_14sp" />

            <EditText
                android:id="@+id/et_contack_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/layout_8dp"
                android:hint="紧急联系人手机号"
                android:textColor="@color/textColor"
                android:textSize="@dimen/layout_15sp" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/confirm"
            android:background="@drawable/btn_main_color"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/layout_20sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:paddingRight="@dimen/layout_35dp"
            android:paddingLeft="@dimen/layout_35dp"
            android:paddingTop="@dimen/layout_5dp"
            android:paddingBottom="@dimen/layout_5dp"
            />
    </RelativeLayout>
</RelativeLayout>