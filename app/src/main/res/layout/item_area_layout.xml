<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/china"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/item_area_name"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginStart="@dimen/layout_20dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chinaCode"
        android:id="@+id/item_area_code"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginStart="@dimen/layout_20dp"
        android:layout_toRightOf="@+id/item_area_name"
        android:layout_toEndOf="@+id/item_area_name"/>
</RelativeLayout>
