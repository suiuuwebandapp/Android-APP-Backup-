<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/send_comment_tool_bar"
        style="@style/AppToolBar"
        app:navigationIcon="@drawable/back"
        app:title="@string/Comment"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/send_comment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_150dp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="@string/PleaseInputComment"
        android:padding="@dimen/layout_4dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="@dimen/layout_16sp" />

    <include layout="@layout/view_line" />

</LinearLayout>