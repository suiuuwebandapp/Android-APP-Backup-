<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minglang.suiuu.activity.MySuiuuActivity">

    <RelativeLayout
        android:id="@+id/my_suiuu_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:layout_alignParentTop="true"
        android:background="@color/tr_black">

        <ImageView
            android:id="@+id/my_suiuu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:layout_marginStart="@dimen/layout_5dp"
            android:background="@drawable/back"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/MySuiuu"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/tr_withe"/>

    </RelativeLayout>

    <com.minglang.suiuu.customview.pulltorefresh.PullToRefreshListView
        android:id="@+id/my_suiuu_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_suiuu_title"
        android:layout_margin="@dimen/layout_5dp"
        android:fadingEdge="none"
        android:scrollbars="none"/>

</RelativeLayout>
