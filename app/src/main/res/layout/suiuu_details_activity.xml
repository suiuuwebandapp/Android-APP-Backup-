<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/suiuu_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DefaultGray2">

        <RelativeLayout
            android:id="@+id/suiuu_details_title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mainColor">

            <ImageView
                android:id="@+id/suiuu_details_back"
                style="@style/backKeyStyle"
                android:contentDescription="@string/Back"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/iv_suiuu_detail_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/layout_5dp"
                android:background="@drawable/btn_suiuu_share_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="随游详情"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_22sp" />
        </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_suiuu_detail"
        android:layout_below="@+id/suiuu_details_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_50dp"
        >

        <RelativeLayout
            android:id="@+id/rl_suiuu_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <WebView
                android:id="@+id/suiuu_detail_web_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include layout="@layout/common_comment_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suiuu_detail_web_view" />

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout

        android:id="@+id/suiuu_details_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bb_consult"
            android:layout_width="@dimen/layout_100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_60dp"
            android:text="咨询"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_size="small"
            bootstrapbutton:bb_type="info" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bb_schedule"
            android:layout_width="@dimen/layout_100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_60dp"
            android:text="预定"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_size="small"
            bootstrapbutton:bb_type="warning" />

    </RelativeLayout>

</RelativeLayout>