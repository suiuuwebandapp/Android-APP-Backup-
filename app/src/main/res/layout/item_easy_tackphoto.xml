<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/iv_item_tackphoto"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:scaleType="centerCrop"
        android:background="@color/white"/>
    <EditText
        android:id="@+id/et_item_description"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_100dp"
        android:textColorHighlight="@color/textColor"
        android:gravity="left"
        android:textSize="@dimen/layout_15sp"
        android:textColor="@color/textColor"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/layout_16dp"
    />
</LinearLayout>