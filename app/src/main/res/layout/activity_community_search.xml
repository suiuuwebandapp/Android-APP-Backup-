<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/community_search_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/mainColor">

        <ImageView
            android:id="@+id/community_search_layout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>

        <EditText
            android:id="@+id/community_search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/layout_5dp"
            android:layout_toEndOf="@+id/community_search_btn"
            android:layout_toLeftOf="@+id/community_search_btn"
            android:layout_toRightOf="@+id/community_search_layout_back"
            android:layout_toStartOf="@+id/community_search_btn"
            android:background="@drawable/background_community_search_view"
            android:gravity="center_vertical"
            android:hint="@string/ProblemHint"
            android:paddingLeft="@dimen/layout_10dp"
            android:paddingRight="@dimen/layout_10dp"
            android:textColor="@color/textColor"/>

        <ImageView
            android:id="@+id/community_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_search_selector"/>

    </RelativeLayout>

</RelativeLayout>