<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minglang.suiuu.activity.AboutUsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/about_us_tool_bar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:layout_alignParentTop="true"
        android:background="@color/mainColor"
        app:navigationIcon="@drawable/back"
        app:title="@string/ContactUs"/>

    <ListView
        android:id="@+id/about_us_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/about_us_tool_bar"
        android:divider="@color/backgroundColor"
        android:dividerHeight="@dimen/layout_8dp"/>

</RelativeLayout>