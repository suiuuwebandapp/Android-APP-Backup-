<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_collection_suiuu_image"
        android:src="@drawable/scroll5"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/layout_25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/item_collection_suiuu_title"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_collection_loop_indicator"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"/>

    <com.minglang.suiuu.customview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_collection_suiuu_head_image"
        android:src="@drawable/default_head_image"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/item_collection_suiuu_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_collection_suiuu_title"
        android:layout_above="@+id/item_collection_loop_indicator"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/layout_5dp"
        android:layout_marginStart="@dimen/layout_5dp"
        android:layout_marginRight="@dimen/layout_5dp"
        android:layout_marginEnd="@dimen/layout_5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_collection_suiuu_name"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/layout_5dp"
        android:layout_marginStart="@dimen/layout_5dp"
        android:layout_toRightOf="@+id/item_collection_suiuu_head_image"
        android:layout_toEndOf="@+id/item_collection_suiuu_head_image"
        android:layout_alignBottom="@+id/item_collection_suiuu_head_image"/>

</RelativeLayout>
